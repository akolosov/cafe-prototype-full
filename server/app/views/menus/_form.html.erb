<%= form_for(@menu, :class => 'form-inline') do |f| %>
  <% if @menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@menu.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
      <% @menu.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% Cafe::Application.config.locale_names.each do |locale| %>
    <%= hidden_field_tag "menu_locales[#{locale}][id]", @menu.locale(locale) %>
    <%= hidden_field_tag "menu_locales[#{locale}][locale]", locale %>
    <div class="field">
      <%= f.label "Name (#{locale})" %>
      <%= text_field_tag "menu_locales[#{locale}][name]", @menu.name(locale), :class => 'span9' %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :startdate %>
    <%= f.date_select :startdate, :order => [:day, :month, :year], :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' } %>
  </div>
  <br />
  <div class="field">
    <%= f.label :enddate %>
    <%= f.date_select :enddate, :order => [:day, :month, :year], :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' } %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit :class => 'btn btn-small btn-primary' %>
  </div>
<% end %>
