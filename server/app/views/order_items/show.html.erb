<div class="row-fluid">
  <div class=" 2">
<p id="notice"><%= notice %></p>
<p>
  <b>Order date:</b>
  <%= @order_item.order.created_at %>
</p>
    <div class="row-fluid">
      <div class="span4">

<%= image_tag @order_item.menu_item.item.photo %>

<p>
  <b>Cost:</b>
  <%= @order_item.menu_item.cost %>
</p>

<p>
  <b>Summ:</b>
  <%= @order_item.menu_item.cost*@order_item.count %>
</p>

<p>
  <b>Name:</b>
  <%= @order_item.menu_item.item.name %>
</p>

<p>
  <b>Description:</b>
  <%= @order_item.menu_item.item.description %>
</p>

<p>
  <b>Count:</b>
  <%= @order_item.count %>
</p>

      </div>
      <div class="span8">
<h1>Listing item_properties</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Property</th>
    <th>Value</th>
  </tr>

<% @order_item.menu_item.item.item_properties.each do |item_property| %>
  <tr>
    <td><%= item_property.property.name %></td>
    <td><%= item_property.value %></td>
  </tr>
<% end %>
</table>
      </div>
    </div>
  </div>
</div>
<br />
<div class="btn-group">
 <%= link_to 'Back', order_items_path(@order_item.order), :class => 'btn btn-small' %>
 <%= link_to 'Edit', edit_order_item_path(@order_item.order, @order_item), :class => 'btn btn-small btn-primary' if can? :update, @order_item.order %>
</div>