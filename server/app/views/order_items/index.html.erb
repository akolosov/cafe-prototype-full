<h1>Listing items for order at <%= @order.created_at %></h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th width="15%">Photo</th>
    <th>Item</th>
    <th>Count</th>
    <th>Cost</th>
    <th>Summ</th>
    <th width="15%">Actions</th>
  </tr>

<% @order_items.each do |order_item| %>
  <tr>
    <td><%= image_tag order_item.menu_item.item.photo %></td>
    <td><%= order_item.menu_item.item.name %></td>
    <td><%= order_item.count %></td>
    <td><%= order_item.menu_item.cost %></td>
    <td><%= order_item.menu_item.cost*order_item.count %></td>
    <td class="btn-group">
     <%= link_to 'Show', order_item_url(order_item.order, order_item), :class => 'btn btn-small btn-info  ' %>
     <%= link_to 'Edit', edit_order_item_path(order_item.order, order_item), :class => 'btn btn-small btn-primary  ' %>
     <%= link_to 'Destroy', order_item_url(order_item.order, order_item), confirm: 'Are you sure?', method: :delete, :class => 'btn btn-small btn-danger  ' %>
    </td>
  </tr>
<% end %>
</table>
<br />
<div class="btn-group">
 <%= link_to 'New Order item', new_order_item_path(@order), :class => 'btn btn-small btn-primary' if can? :update, @order %>
 <%= link_to 'Back', orders_path, :class => 'btn btn-small ' %>
 <%= link_to 'Edit Order', edit_order_path(@order), :class => 'btn btn-small btn-primary' if can? :update, @order %>
</div>