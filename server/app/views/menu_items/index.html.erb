<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @menu.name %>
</p>

<h1>Listing menu_items</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th width="10%">Photo</th>
    <th>Item</th>
    <th>Cost</th>
    <th width="15%">Actions</th>
  </tr>

<% @menu_items.each do |menu_item| %>
  <tr>
    <td><%= image_tag menu_item.item.photo %></td>
    <td><%= menu_item.item.name %> (<%= menu_item.item.group.name %>)<br /><%= menu_item.item.description %></td>
    <td><%= menu_item.cost %></td>
    <td class="btn-group">
     <%= link_to 'Show', menu_item_url(menu_item.menu, menu_item), :class => 'btn btn-small btn-info  ' if can? :read, menu_item %>
     <%= link_to 'Edit', edit_menu_item_path(menu_item.menu, menu_item), :class => 'btn btn-small btn-primary  ' if can? :update, menu_item %>
     <%= link_to 'Destroy', menu_item_url(menu_item.menu, menu_item), confirm: 'Are you sure?', method: :delete, :class => 'btn btn-small btn-danger  ' if can? :destroy, menu_item %>
    </td>
  </tr>
<% end %>
</table>
<br />
<div class="btn-group">
 <%= link_to 'Back', menus_path, :class => 'btn btn-small ' %>
 <%= link_to 'Edit', edit_menu_path(@menu), :class => 'btn btn-small btn-primary' if can? :update, @menu %>
 <%= link_to 'New Menu item', new_menu_item_path(@menu), :class => 'btn btn-small btn-primary' if can? :create, @menu %>
</div>