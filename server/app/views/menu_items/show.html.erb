<div class="row-fluid">
  <div class=" 2">
    <p id="notice"><%= notice %></p>
    <p><%= @menu_item.menu.name %></p>
    <div class="row-fluid">
      <div class="span4">
<%= image_tag @menu_item.item.photo, :class => "span3" %>

<p>
  <b>Cost:</b>
  <%= @menu_item.cost %>
</p>

<p>
  <b>Menu:</b>
  <%= @menu_item.menu.name %>
</p>

<p>
  <b>Name:</b>
  <%= @menu_item.item.name %>
</p>

<p>
  <b>Description:</b>
  <%= @menu_item.item.description %>
</p>

      </div>
      <div class="span8">
<h1>Listing item_properties</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Property</th>
    <th>Value</th>
  </tr>

<% @menu_item.item.item_properties.each do |item_property| %>
  <tr>
    <td><%= item_property.property.name %></td>
    <td><%= item_property.value %></td>
  </tr>
<% end %>
</table>
      </div>
    </div>
  </div>
</div>
<br />
<div class="btn-group">
 <%= link_to 'Back', menu_items_path(@menu_item.menu), :class => 'btn btn-small ' %>
 <%= link_to 'Edit', edit_menu_item_path(@menu_item), :class => 'btn btn-small btn-primary' if can? :update, @menu_item %>
</div>

