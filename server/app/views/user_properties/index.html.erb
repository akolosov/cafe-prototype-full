<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<h1>Listing user_properties</h1>

<% if @user_property %>
  <table class="table table-striped table-bordered table-condensed">
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Birthday</th>
      <th class="span3">Action</th>
    </tr>

    <tr>
      <td><%= @user_property.name %></td>
      <td><%= @user_property.phone %></td>
      <td><%= @user_property.address %></td>
      <td><%= @user_property.birthday %></td>
      <td class="btn-group">
       <%= link_to 'Show', user_property_path(@user_property.user, @user_property), :class => 'btn btn-small btn-info' if can? :read, @user_property %>
       <%= link_to 'Edit', edit_user_property_path(@user_property.user, @user_property), :class => 'btn btn-small btn-primary' if can? :update, @user_property %>
       <%= link_to 'Delete',user_property_path(@user_property.user, @user_property), confirm: 'Are you sure?', method: :delete, :class => 'btn btn-small btn-danger' if can? :destroy, @user_property %>
      </td>
    </tr>
  </table>
<% end %>
<br />
<%= link_to 'New User property', new_user_property_path, :class => 'btn btn-small btn-primary' unless @user_property %>
