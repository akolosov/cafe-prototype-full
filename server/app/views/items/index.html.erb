<h1>Listing items</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th width="15%">Photo</th>
    <th>Group</th>
    <th>Name</th>
    <th>Description</th>
    <th width="20%">Actions</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= image_tag item.photo %></td>
    <td><%= item.group.name %></td>
    <td><%= item.name %></td>
    <td><%= item.description %></td>
    <td class="btn-group">
     <%= link_to 'Show', item, :class => 'btn btn-small btn-info  ' if can? :read, item %>
     <%= link_to 'Props', item_properties_path(item), :class => 'btn btn-small btn-info  ' if can? :read, item %>
     <%= link_to 'Edit', edit_item_path(item), :class => 'btn btn-small btn-primary  ' if can? :update, item  %>
     <%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-small btn-danger  ' if can? :destroy, item %>
    </td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New Item', new_item_path, :class => 'btn btn-small btn-primary' if can? :create, Item %>
