<h1>Listing users</h1>
<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>User</th>
    <th>Actions</th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td width="25%" class="btn-group">
     <%= link_to 'Show', user, :class => 'btn btn-info btn-small' if can? :read, user %>
     <%= link_to 'Props', user_properties_path(user), :class => 'btn btn-info btn-small  ' if can? :read, user %>
     <%= link_to 'Bonuses', user_accounts_path(user), :class => 'btn btn-info btn-small  ' if can? :read, user %>
     <%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-primary btn-small  ' if can? :update, user %>
     <%= link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger btn-small  ' if can? :destroy, user %>
    </td>
  </tr>
<% end %>
</table>
