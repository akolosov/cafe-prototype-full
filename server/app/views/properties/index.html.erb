<h1>Listing properties</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>

<% @properties.each do |property| %>
  <tr>
    <td><%= property.name %></td>
    <td><%= property.description %></td>
    <td width="15%" class="btn-group">
     <%= link_to 'Show', property, :class => 'btn btn-small btn-info  ' if can? :read, property %>
     <%= link_to 'Edit', edit_property_path(property), :class => 'btn btn-small btn-primary  ' if can? :update, property %>
     <%= link_to 'Destroy', property, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-small btn-danger  ' if can? :destroy, property %>
    </td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New Property', new_property_path, :class => 'btn btn-small btn-primary' if can? :create, Property %>
